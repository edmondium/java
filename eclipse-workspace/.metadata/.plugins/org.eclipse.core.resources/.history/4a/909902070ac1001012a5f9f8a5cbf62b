package tugas;
import java.util.Scanner; 
import javax.swing.*; 

public class tugas2{ 
    public static void main(String[] args) { 
        Scanner scanner = new Scanner(System.in); 
        
        //Deklrasi variabel 
        String golongan; 
        int jamLembur; 
        int gajiPokok = 0; 
        double persentaseLembur = 0.0; 
        double gajiLembur; 
        double totalPenghasilan; 
 
        //Input data 
        System.out.println("=== Program Perhitungan Gaji Karyawan ==="); 
        System.out.print("Masukkan Golongan (A/B/C): "); 
        golongan = scanner.nextLine().toUpperCase(); 
 
        System.out.print("Masukkan Jam Lembur: "); 
        jamLembur = scanner.nextInt(); 
 
        //Tentukan Gaji Pokok Berdasarkan Golongan Menggunakan IF 
        if (golongan.equals("A")) { 
            gajiPokok = 5000000; 
        } else if (golongan.equals("B")) { 
            gajiPokok = 6500000; 
        } else if (golongan.equals("C")) { 
            gajiPokok = 9500000; 
        } else { 
            System.out.println("Golongan tidak valid!"); 
            scanner.close(); 
            return; 
        } 
 
        //Tentukan Persentase Lembur Berdasarkan Jam Lembur Menggunakan IF 
        if (jamLembur == 1) { 
            persentaseLembur = 0.30; 
        } else if (jamLembur == 2) { 
            persentaseLembur = 0.32; 
        } else if (jamLembur == 3) { 
            persentaseLembur = 0.34; 
        } else if (jamLembur == 4) { 
            persentaseLembur = 0.36; 
        } else if (jamLembur == 5) { 
            persentaseLembur = 0.38; 
        } else if (jamLembur == 0) { 
            persentaseLembur = 0.00; 
        } else { 
            System.out.println("Jam Lembur Tidak Valid!"); 
            scanner.close(); 
            return; 
        } 
 
        //Hitung Gaji Lembur 
        gajiLembur = gajiPokok * persentaseLembur; 
 
        // Hitung Total Penghasilan 
        totalPenghasilan = gajiPokok + gajiLembur; 
 
        //Output Hasil 
        System.out.println("\n=== Hasil Perhitungan ==="); 
        System.out.println("Golongan: " + golongan); 
        System.out.println("Gaji Pokok: Rp " + String.format("%,d", 
gajiPokok)); 
        System.out.println("Jam Lembur: " + jamLembur + " jam"); 
        System.out.println("Persentase Lembur: " + (int) (persentaseLembur * 
100) + "%"); 
        System.out.println("Gaji Lembur: Rp " + String.format("%, .0f", 
gajiLembur)); 
        System.out.println("Total Penghasilan: Rp " + String.format("%,.0f", 
totalPenghasilan)); 
 
        scanner.close();
    } 
}